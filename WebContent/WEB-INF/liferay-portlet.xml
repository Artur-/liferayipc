<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_0_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>sender</portlet-name>
		<instanceable>true</instanceable>
        <!-- Necessary for the sender if communicating between portlets in different WARs. -->
        <!-- If communicating between portlets in the same WAR, both portlets should use the same value. -->
        <private-session-attributes>false</private-session-attributes>
	</portlet>
	<portlet>
		<portlet-name>receiver</portlet-name>
		<instanceable>true</instanceable>
	</portlet>
    <portlet>
        <portlet-name>sessionreceiver</portlet-name>
        <instanceable>true</instanceable>
        <!-- Needed also at the receiving end if communicating between portlets in the same WAR. -->
        <private-session-attributes>false</private-session-attributes>
    </portlet>
    <portlet>
        <portlet-name>jsp-sender</portlet-name>
        <instanceable>false</instanceable>
    </portlet>
    <portlet>
        <portlet-name>jsp-receiver</portlet-name>
        <instanceable>true</instanceable>
    </portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>