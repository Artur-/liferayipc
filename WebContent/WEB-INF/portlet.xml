<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	<portlet>
		<portlet-name>sender</portlet-name>
		<display-name>Vaadin IPC for Liferay demo - Sender</display-name>
		<portlet-class>
			com.vaadin.terminal.gwt.server.ApplicationPortlet2
		</portlet-class>
		<init-param>
			<name>application</name>
			<value>com.vaadin.addon.ipcforliferay.demo.sender.SenderApplication</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<portlet-info>
			<title>Vaadin IPC for Liferay demo - Vaadin Sender</title>
			<short-title>Vaadin Sender</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>receiver</portlet-name>
		<display-name>Vaadin IPC for Liferay demo - Receiver</display-name>
		<portlet-class>
			com.vaadin.terminal.gwt.server.ApplicationPortlet2
		</portlet-class>
		<init-param>
			<name>application</name>
			<value>
				com.vaadin.addon.ipcforliferay.demo.receiver.ReceiverApplication
			</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<portlet-info>
			<title>Vaadin IPC for Liferay demo - Vaadin Receiver</title>
			<short-title>Vaadin Receiver</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
    <portlet>
        <portlet-name>sessionreceiver</portlet-name>
        <display-name>Vaadin IPC for Liferay demo - Shared Session Receiver</display-name>
        <portlet-class>
            com.vaadin.terminal.gwt.server.ApplicationPortlet2
        </portlet-class>
        <init-param>
            <name>application</name>
            <value>
                com.vaadin.addon.ipcforliferay.demo.sessionreceiver.SessionReceiverApplication
            </value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <portlet-info>
            <title>Vaadin IPC for Liferay demo - Vaadin Shared Session Receiver</title>
            <short-title>Vaadin Shared Session Receiver</short-title>
            <keywords></keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
    <portlet>
        <portlet-name>jsp-sender</portlet-name>
        <display-name>Vaadin IPC for Liferay demo - JSP Sender</display-name>
        <portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
        <init-param>
            <name>view-jsp</name>
            <value>/ipcsend.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <portlet-info>
            <title>Vaadin IPC for Liferay demo - JSP Sender</title>
            <short-title>JSP Sender</short-title>
            <keywords></keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
    <portlet>
        <portlet-name>jsp-receiver</portlet-name>
        <display-name>Vaadin IPC for Liferay demo - JSP Receiver</display-name>
        <portlet-class>com.liferay.util.bridges.mvc.MVCPortlet</portlet-class>
        <init-param>
            <name>view-jsp</name>
            <value>/ipcreceive.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>
        <portlet-info>
            <title>Vaadin IPC for Liferay demo - JSP Receiver</title>
            <short-title>JSP Receiver</short-title>
            <keywords></keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
</portlet-app>